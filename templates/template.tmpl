<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="$root$/style.css" title="Default style"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" $if(lang)$ xml:lang="$lang$" $else$ lang="en" $endif$>
	<head>
		$if(index)$
		<title>$pagetitle$</title>
		$else$
		<title>Tartines â€” $pagetitle$</title>
		$endif$

		$if(highlighting-css)$
		  <style type="text/css">
		$highlighting-css$
		  </style>
		$endif$

		<script type="application/javascript" src="index.js"></script>
	</head>
	<body>
		<div id="container">
			$if(menu)$
			<ul id="menu">
				<li>
					<a href="$root$/index.xhtml">
						Index
					</a>
				</li>

				<li>
					<a href="$root$/projects.xhtml">
						Projects
					</a>
				</li>

				<li>
					<a href="$root$/rules.xhtml">
						Rules
					</a>
				</li>

				<li>
					<a href="$root$/jabber.xhtml">
						Chat
					</a>
				</li>

				<li>
					<a href="$root$/faq.xhtml">
						FAQ
					</a>
				</li>
			</ul>
			$endif$

			$for(include-before)$
			$include-before$
			$endfor$

			<div id="header">

				$if(title)$
				<h1>$title$</h1>
				$endif$

				<div id="subtitles">
					$if(version)$
					<h3 id="version">Version $version$</h3>
					$endif$
					$if(date)$
					<h3 id="date">$date$</h3>
					$endif$
					$for(author)$
					<h3 class="author">$author$</h3>
					$endfor$

					$if(addressee)$
					<h3 id="addressee">$addressee$</h3>
					$endif$
				</div>

				$if(subtitle)$
				<h1 id="subtitle">$subtitle$</h1>
				$endif$

				$if(abstract)$
				<div id="abstract">
				$abstract$
				</div>
				$endif$

				$if(toc)$
				$if(show-toc)$
				<div id="$idprefix$TOC">
					$if(toc-title)$
					<h3>$toc-title$</h3>
					$else$
					<h3>Table of contents:</h3>
					$endif$
				$toc$
				</div>

				<hr/>
				$endif$
				$endif$

			</div>

			$if(content)$
			<div id="content">
			$endif$

				$body$

			$if(content)$
			</div>
			$endif$

			$for(include-after)$
			$include-after$
			$endfor$

		</div>
	</body>
</html>
